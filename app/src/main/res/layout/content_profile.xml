<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:gravity="center"
    android:layout_width="match_parent"
    tools:context="com.example.finalproject.LoginRegister.ProfileFragment"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/user_profile_image_background"
            android:elevation="4dp"
            android:src="@drawable/ic_boy"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:layout_below="@id/user_profile_photo"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_email"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_chg_password"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_padlock"
            android:textColor="@android:color/white"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/btn_logout"
            android:layout_marginRight="70dp"
            android:layout_height="30dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_logout"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_logout"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:layout_marginRight="40dp"
            android:layout_height="30dp"
            android:layout_width="30dp"
            />



    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#000000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="20dp">


                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/card_view_image1"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/eev"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/card_view_image_title1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:layout_margin="10dp"
                            android:text="Tambahkan eventmu disini! meriahkan acaramu dengan meluaskan informasi terkait acaramu yang akan disebarkan secara global dan lokal."
                            android:layout_gravity="center_horizontal"
                            android:textSize="12dp"/>




                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="230dp"
                        android:id="@+id/button13"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/gradient_bg_hover"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        ></Button>



                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="11dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:src="@drawable/plus"
                        />



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:id="@+id/cek"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/card_view_image"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/pengaduan"
                            android:scaleType="centerCrop"/>



                        <TextView
                            android:id="@+id/card_view_image_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:text="Tambahkan pengaduanmu untuk diprosesn secara resmi oleh pihak terkait. Pengaduan bisa berupa layanan fasilitas umum maupun bencana."
                            android:layout_gravity="center_horizontal"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:textAlignment="center"
                            android:text=""></TextView>


                    </LinearLayout>


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="11dp"
                        app:fabColor="#f0f0f0"
                        app:fabIconColor="#f0f0f0"
                        android:layout_gravity="bottom|center_horizontal"
                        app:fabMenuGravity="center_horizontal"
                        android:src="@drawable/plus"
                        app:borderWidth="0dp"
                        app:fabSize="mini"
                        />



                </android.support.v7.widget.CardView>


                <com.github.fabtransitionactivity.SheetLayout
                    android:id="@+id/bottom_sheet2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    app:ft_container_gravity="center"

                    app:ft_color="@color/colorPrimary"
                    android:elevation="2dp"/>

            </LinearLayout>





        </TableLayout>
    </ScrollView>




</LinearLayout>