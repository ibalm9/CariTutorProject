<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eeeeef"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.finalproject.view_event.ViewFullIEvent"
    tools:showIn="@layout/view_pengaduan_detail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1">


            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewFulldetil"                 android:layout_marginTop="6dp"
                android:scaleType="fitCenter"
                app:riv_corner_radius="6dip"
                app:riv_border_width="6dip"
                app:riv_border_color="@color/white"
                android:layout_width="fill_parent"
                android:layout_marginBottom="8dp"

                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                ></com.makeramen.roundedimageview.RoundedImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.example.finalproject.view_event.ViewFullIEvent"
                tools:showIn="@layout/view_pengaduan_detail"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="20dp"
                    android:id="@+id/ada"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewdetil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="#000000"

                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:text="Large Textj"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="28dp"
                        android:id="@+id/la1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text2"
                            android:textSize="16sp"
                            android:id="@+id/textViewsaledetil"

                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_icon__jam"
                            android:drawablePadding="20dp"
                            android:layout_below="@id/textView"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text2"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"

                            android:textColor="@color/colorBlack"
                            android:drawableLeft="@drawable/ic_icon__lokasi"
                            android:drawablePadding="20dp"
                            android:layout_below="@id/textView"
                            android:id="@+id/textViewlocadetil"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:text="Status : "></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Tersubmit"
                            android:drawablePadding="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_below="@id/textView"
                            android:id="@+id/textViewStatus"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="20dp"
                            android:gravity="end"
                            android:textAlignment="textEnd"

                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:text="  |  Kategori : "></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Fasilitas"
                            android:gravity="end"
                            android:textAlignment="textEnd"

                            android:drawablePadding="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorBlack"
                            android:layout_below="@id/textView"
                            android:id="@+id/textViewdate1detil"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:background="#f0f0f0" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ada"
                        android:text="Deskripsi"
                        android:textColor="#000000"
                        android:id="@+id/des"
                        android:textStyle="bold"
                        android:layout_marginLeft="-20dp"
                        android:background="@color/white"
                        android:padding="20dp"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textdesadetil"
                        android:layout_below="@id/des"
                        android:layout_marginLeft="-20dp"

                        android:text="content"
                        android:layout_marginTop="-20dp"
                        android:background="@color/white"
                        android:padding="20dp"
                        android:textSize="18sp"></TextView>



                    <com.anthonyfdev.dropdownview.DropDownView
                        android:id="@+id/drop_down_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:background="#EEEEEF"
                        android:paddingTop="10dp"
                        app:overlayColor="#64000000"/>


                </LinearLayout>






            </RelativeLayout>




        </TableLayout>
    </ScrollView>



</LinearLayout>
