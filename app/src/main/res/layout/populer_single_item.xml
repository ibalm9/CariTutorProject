<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popular_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="157dp"
    android:layout_height="180dp"
    android:background="@color/white"
    android:padding="2dp">


    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/popular_image"
        android:scaleType="centerCrop"
        app:riv_corner_radius="12dip"
        app:riv_border_width="0dip"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:riv_border_color="#333333"
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="0sp"
            android:text="Photography"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:id="@+id/left_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/count1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="0sp"
                    android:text="231"/>

                <TextView
                    android:id="@+id/lorem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="0sp"
                    android:text="Lorem"/>

            </LinearLayout>

            <View
                android:id="@+id/vertical_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#979797"
                android:layout_toRightOf="@id/left_part"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <LinearLayout
                android:id="@+id/right_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/vertical_line">

                <TextView
                    android:id="@+id/count2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="0sp"
                    android:text="3461"/>

                <TextView
                    android:id="@+id/lorem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="0sp"
                    android:text="Lorem Test"
                    android:layout_below="@id/count1"/>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>