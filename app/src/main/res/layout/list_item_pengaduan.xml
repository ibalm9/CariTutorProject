<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15dip">





    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageDownloadedPengaduan"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="100dip"
        app:riv_border_width="0dip"
        app:riv_border_color="#333333"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_height="120dp"
        android:paddingLeft="6dp"
        >



    </com.makeramen.roundedimageview.RoundedImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="judul"
        android:id="@+id/textjudul2"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#000000"

        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_below="@id/imageDownloadedPengaduan"></TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="-6dp"
        android:id="@+id/statues"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_below="@id/textjudul2"
        android:layout_toRightOf="@id/textViewNamePengaduan"
        android:textAlignment="center"
        android:text="Published"
        android:background="#63BC46"></TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
       android:text="Bencana"
        android:layout_marginTop="-6dp"
        android:textStyle="bold"
        android:id="@+id/textViewNamePengaduan"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_below="@id/textjudul2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="#B53D41"></TextView>

    <TextView
        android:id="@+id/textViewPublisherPengaduan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginTop="-6dp"
        android:padding="10dp"
        android:layout_below="@id/textViewNamePengaduan"
        android:layout_alignParentLeft="true"
        android:lineSpacingExtra="2dp"
        android:fontFamily="sans-serif-light"
        android:text="Hello Codetr ..."
        />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:id="@+id/kanan"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CodeTR"
            android:textColor="@color/colorBlack"
            android:typeface="sans"

            android:drawablePadding="6dp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-light"
            android:textSize="0sp"
            android:layout_marginTop="190dp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/kanan"
        android:layout_alignParentLeft="true"
        android:paddingTop="50dp"

        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/textViewDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="Date/Time"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:typeface="sans"
            android:fontFamily="sans-serif-light"
            android:textSize="0sp"

            android:layout_marginTop="190dp"
            />

        <TextView

            android:id="@+id/textViewLocation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="0sp"

            android:padding="10dp"
            android:layout_marginTop="230dp"
            android:drawablePadding="6dp"

            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-light"
            android:text="Your Event Location"
            />
    </RelativeLayout>

    <!-- Title Of Song-->


    <!-- Artist Name -->




    <!-- Rightend Duration -->


</RelativeLayout>